<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/plaintext_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Number :"
        android:textColor="#000000"
        android:textSize="20sp" />

      <EditText
          android:id="@+id/plaintext_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/plaintext_label"
          android:hint="Enter Number"
          android:textAllCaps="true"
          android:inputType="textCapCharacters" />


    <TextView
        android:id="@+id/key_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plaintext_input"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Power :"
        android:textColor="#000000"
        android:textSize="20sp" />

      <EditText
          android:id="@+id/key_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/key_label"
          android:hint="Enter Power"
          android:inputType="number" />

      <TextView
          android:id="@+id/mod_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/key_input"
          android:layout_marginStart="5dp"
          android:layout_marginTop="5dp"
          android:text="Mod :"
          android:textColor="#000000"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/mod_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/mod_label"
          android:hint="Enter Mod Number"
          android:inputType="number" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_calculate"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/mod_input"
        android:layout_marginTop="5dp"
        android:text="CALCULATE" />

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_calculate"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="Output :"
        android:textColor="#000000"
        android:textSize="17sp" />

  </RelativeLayout>
</ScrollView>